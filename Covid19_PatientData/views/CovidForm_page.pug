meta(charset="UTF-8")
meta(name="viewport", content="width=device-width,initial-scale=1")
title Register | MOH
link(rel="stylesheet", type="text/css", href="/css/form.css")
link(rel="stylesheet", type="text/css", href="/bootstrap/css/bootstrap.min.css")
nav.fixed-top
  ul
    li
      a(href="/logout") Logout
.cont
  .container
    img(src='/images/form-header-image.png' width="770px")
    .head
      p Ministry of Health
      h5 Covid-19 (CORONA VIRUS)
      p virus-Test Registration Form
    .content
      form(name="covid19Data" action="/RegData" method="POST" onsubmit="return validate()" autocomplete="off")
        .form-row
          .form-group.col-md-6
            label(for="inputSurname") Surname
            input.form-control(type="text" name="surname")
            #name.error
          .form-group.col-md-6
            label(for="inputgivenName") Given name
            input.form-control(type="text" name="givenName")
            #gName.error
        .form-row
          .form-group.col-md-6
            label(for="inputdob") Data of Birth
            input.form-control(type="date" name="dob")
            #DOB.error
          .form-group.col-md-6
            label(for="inputnresidence") Place of residence
            input.form-control(type="text" name="residence")
            #Presidence.error
        .form-row
          .form-group.col-md-6
            label(for="inputocupation") Occupation
            input.form-control(type="text" name="occupation")
            #occupt.error
          .form-group.col-md-6
            label(for="inputnation") Nationality
            input.form-control(type="text" name="nationality")
            #nation.error
        .form-row
          .form-group.col-md-6
            label(for="inputid") Passport No. / NIN No(Ugandans Only)
            input.form-control(type="text" name="IdCard")
            #cardNo.error
          .form-group.col-md-6
            label(for="inputContact") Contact Number
            input.form-control(type="text" name="phone")
            #contact.error
        .form-group
          fieldset
            legend Gender 
              .form-group.col-md-6
                .form-check.custom-control-inline
                  input.form-check-input(type="radio" name="gender" value='Male') 
                  label.form-check-label Male
                .form-check.custom-control-inline
                  input.form-check-input(type="radio" name="gender" value='Female') 
                  label.form-check-label Female
            #gen.error
        .form-row
          .form-group.col-md-6
            label(for="inputpatient") Patient No.
            input.form-control(type="text" name="patient" value="MH"+ Date.now() readonly)
            #patientNo.error
          .form-group.col-md-6
            label(for="inputcategory") Category
            select.form-control(name="category", type="text")
              option(value="Default" placeholder="" selected) --Select Category--
              option Returnee
              option Contact
              option Alert
              option Volunteer
            #cat.error
        button.btn.btn1.btn-primary(type="submit") Register
      br

script(src="js/formValidation.js")
